@page "/saidaspage/delete/{SaidaId:decimal}/{Day:int}/{Month:int}/{Year:int}"
@using Microsoft.AspNetCore.Components.Authorization

@rendermode InteractiveServer

@inject IHttpClientFactory HttpFactory
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@inject Kakeibo.AppHost.Web.Services.TokenService TokenService
@inject IStringLocalizer<DeleteSaida> L

<h3 style="padding-bottom:10px;">
    @L["Excluir Saída"]
</h3>

@if (saida == null && !deleted)
{
    <p>@L["Carregando registro..."]</p>
}
else if (deleted)
{
    <div class="alert alert-success">
        @L["Registro excluído ✔"]
    </div>
    <a class="btn btn-primary" href="/saidaspage/@Day/@Month/@Year">
        @L["Voltar"]
    </a>
}
else
{
    <div class="card p-3">
        <p>
            <b>@L["Descrição:"]</b> @saida?.Descricao
        </p>
        <p>
            <b>@L["Valor:"]</b> @saida?.ValorDespesa.ToString("N2")
        </p>
    </div>

    <div class="d-flex align-items-center mt-2 gap-2">
        <button class="btn btn-danger" @onclick="ConfirmDelete">
            🗑 @L["Excluir"]
        </button>
        <a class="btn btn-primary" href="/saidaspage/@UserId/@Day/@Month/@Year">
            @L["Cancelar"]
        </a>
    </div>
}

@code {
    [Parameter] public decimal SaidaId { get; set; }
    [Parameter] public int Day { get; set; }
    [Parameter] public int Month { get; set; }
    [Parameter] public int Year { get; set; }

    private Kakeibo.AppHost.Web.Models.Saidas? saida;
    private bool deleted;

    public string? UserId = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var token = TokenService.GetToken();
        if (string.IsNullOrWhiteSpace(token))
        {
            Nav.NavigateTo("/login", forceLoad: true);
            return;
        }

        UserId = TokenService.GetUserIdFromToken();

        var client = HttpFactory.CreateClient("apis");
        saida = await client.GetFromJsonAsync<Kakeibo.AppHost.Web.Models.Saidas>(
            $"saidas/{SaidaId}"
        );
    }

    private async Task ConfirmDelete()
    {
        var client = HttpFactory.CreateClient("apis");
        var resp = await client.DeleteAsync($"saidas/{SaidaId}");

        if (resp.IsSuccessStatusCode)
        {
            deleted = true;
            saida = null;
        }
    }
}
