@page "/rendas"
@using Microsoft.AspNetCore.Authorization
@using System.Globalization

@inject IHttpClientFactory HttpFactory
@inject NavigationManager Nav
@inject Kakeibo.AppHost.Web.Services.TokenService TokenService
@inject IStringLocalizer<Calendar> L
@using Kakeibo.AppHost.Web.Models

<PageTitle>@L["Rendas"]</PageTitle>

<h1>@L["Rendas do Mês"]</h1>

<div class="d-flex" style="gap:20px; padding-top:30px;">

    <!-- Calendar on the left -->
    <div style="width:35%;">
        @CalendarHtml()
    </div>

    <!-- Entries table on the right -->
    <div style="flex:1;">
        <h5>@L["Rendas do Mês:"] @selectedMonthDisplay</h5>

        @if (entradasDoMes == null)
        {
            <p>@L["Carregando Rendas..."]</p>
        }
        else if (!entradasDoMes.Any())
        {
            <p>@L["Nenhuma Renda encontrada."]</p>

            <div class="mb-2" style="padding-top: 10px;">
                <a href="/rendas/new" class="btn btn-success">
                    @L["Nova Renda"]
                </a>
            </div>
        }
        else
        {
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>@L["Descrição"]</th>
                        <th class="text-end">@L["Valor"]</th>
                        <th>@L["Ações"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in entradasDoMes)
                    {
                        totalEntradas += e.ValorEntrada;

                        <tr>
                            <td>@e.Descricao</td>
                            <td class="text-end">
                                @e.ValorEntrada.ToString("N2", CultureInfo.CurrentCulture)
                            </td>
                            <td>
                                <a href="/rendas/edit/@e.EntradaID"
                                   class="btn btn-sm btn-primary me-1">
                                    @L["Editar"]
                                </a>
                                <a href="/rendas/delete/@e.EntradaID"
                                   class="btn btn-sm btn-danger">
                                    @L["Excluir"]
                                </a>
                            </td>
                        </tr>
                    }

                    <tr>
                        <td class="text-end" style="color:navy">
                            <strong>@L["TOTAL:"]</strong>
                        </td>
                        <td class="text-end" style="color:navy">
                            <strong>
                                @totalEntradas.ToString("N2", CultureInfo.CurrentCulture)
                            </strong>
                        </td>
                        <td></td>
                    </tr>
                </tbody>
            </table>

            <div class="mb-2" style="padding-top: 10px;">
                <a href="/rendas/new" class="btn btn-success">
                    @L["Nova Renda"]
                </a>
            </div>
        }
    </div>
</div>

@code {
    private List<Entradas>? entradasDoMes;
    private string selectedMonthDisplay = string.Empty;
    private decimal totalEntradas = 0m;

    protected override async Task OnInitializedAsync()
    {
        var token = TokenService.GetToken();

        if (string.IsNullOrWhiteSpace(token))
        {
            Nav.NavigateTo("/login", forceLoad: true);
            return;
        }

        await LoadEntradasDoMesAsync(DateTime.Today);
        totalEntradas = 0m;
    }

    private async Task LoadEntradasDoMesAsync(DateTime dt)
    {
        var userId = TokenService.GetUserIdFromToken();

        selectedMonthDisplay = dt.ToString("MM/yyyy", CultureInfo.CurrentCulture);

        var client = HttpFactory.CreateClient("apis");
        entradasDoMes = await client.GetFromJsonAsync<List<Entradas>>(
            $"entradas/{userId}/{dt.Month:00}-{dt.Year:0000}"
        );
    }

    private RenderFragment CalendarHtml() => builder =>
    {
        var culture = CultureInfo.CurrentCulture;
        var dtf = culture.DateTimeFormat;

        var today = DateTime.Today;
        var firstDayOfMonth = new DateTime(today.Year, today.Month, 1);
        var daysInMonth = DateTime.DaysInMonth(today.Year, today.Month);

        int cultureFirstDay = (int)dtf.FirstDayOfWeek;
        int offset = ((int)firstDayOfMonth.DayOfWeek - cultureFirstDay + 7) % 7;

        int totalCells = ((offset + daysInMonth) <= 35 ? 35 : 42);
        int dayCounter = 1;

        int seq = 0;

        // Month title
        builder.OpenElement(seq++, "div");
        builder.AddAttribute(seq++, "class", "text-center mb-1 p-1");
        builder.AddAttribute(seq++, "style", "background-color: lightyellow; font-weight:bold;");
        builder.AddContent(seq++, today.ToString("MMMM yyyy", culture));
        builder.CloseElement();

        // Weekday headers (culture-aware)
        builder.OpenElement(seq++, "div");
        builder.AddAttribute(seq++, "class", "d-flex");

        var weekdays = dtf.AbbreviatedDayNames;
        for (int i = 0; i < 7; i++)
        {
            var index = (i + cultureFirstDay) % 7;

            builder.OpenElement(seq++, "div");
            builder.AddAttribute(seq++, "class", "text-center p-1 border");
            builder.AddAttribute(seq++, "style", "background-color: lightgreen; flex:1;");
            builder.AddContent(seq++, weekdays[index]);
            builder.CloseElement();
        }

        builder.CloseElement();

        // Calendar grid
        builder.OpenElement(seq++, "div");
        builder.AddAttribute(seq++, "class", "d-flex flex-wrap");

        for (int i = 0; i < totalCells; i++)
        {
            builder.OpenElement(seq++, "div");
            builder.AddAttribute(seq++, "class", "border text-center p-1");
            builder.AddAttribute(seq++, "style", "width:14.28%; height:40px;");

            if (i >= offset && dayCounter <= daysInMonth)
            {
                if (dayCounter == today.Day)
                {
                    builder.OpenElement(seq++, "span");
                    builder.AddAttribute(seq++, "style", "color:red; font-weight:bold;");
                    builder.AddContent(seq++, dayCounter);
                    builder.CloseElement();
                }
                else
                {
                    builder.AddContent(seq++, dayCounter);
                }

                dayCounter++;
            }

            builder.CloseElement();
        }

        builder.CloseElement();
    };
}
