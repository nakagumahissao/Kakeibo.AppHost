@page "/tiposrendas/adicionar"
@using Kakeibo.AppHost.Web.Models
@inject IHttpClientFactory HttpFactory
@inject NavigationManager Nav
@inject Kakeibo.AppHost.Web.Services.TokenService TokenService
@rendermode InteractiveServer

<PageTitle>Tipos de Rendas - Novo</PageTitle>

<h3 style="padding-bottom:10px;">Novo Tipo de Renda</h3>

@if (isSaving)
{
    <p>Salvando...</p>
}

<div class="form-group">
    <label>Nome do Tipo de Renda</label>
    <input class="form-control" @bind="tipo.TipoDeEntrada" />

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <p class="text-danger mt-1">@errorMessage</p>
    }
</div>

<div class="d-flex align-items-center mt-2 gap-2">
    <button class="btn btn-primary" @onclick="Salvar">Salvar</button>
    <a class="btn btn-primary" href="/tiposrendas">Cancelar</a>
</div>


@code {
    private TiposDeEntradas tipo = new TiposDeEntradas
    {
        TipoDeEntrada = ""
    };

    private bool isSaving = false;
    private string errorMessage = string.Empty;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        var token = TokenService.GetToken();
        userId = TokenService.GetUserIdFromToken();

        if (string.IsNullOrWhiteSpace(token))
        {
            Nav.NavigateTo("/login", forceLoad: true);
            return;
        }

        tipo = new TiposDeEntradas {
            TipoDeEntrada = ""
        };
    }

    private async Task Salvar()
    {
        try
        {
            isSaving = true;
            errorMessage = "";

            if (tipo == null || string.IsNullOrWhiteSpace(tipo.TipoDeEntrada))
            {
                errorMessage = "O nome do tipo de renda é obrigatório.";
                return;
            }

            tipo.UserId = userId;

            var client = HttpFactory.CreateClient("apis");
            var response = await client.PostAsJsonAsync("tiposentrada", tipo);

            if (response.IsSuccessStatusCode)
            {
                Nav.NavigateTo("/tiposrendas");
            }
            else
            {
                errorMessage = "Erro ao salvar. Código: " + response.StatusCode;
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSaving = false;
        }
    }
}
