@page "/tiposrendas/adicionar"
@using Kakeibo.AppHost.Web.Models

@inject IHttpClientFactory HttpFactory
@inject NavigationManager Nav
@inject Kakeibo.AppHost.Web.Services.TokenService TokenService
@inject IStringLocalizer<TiposRenda_New> L
@rendermode InteractiveServer

<PageTitle>@L["Tipos de Rendas - Novo"]</PageTitle>

<h3 style="padding-bottom:10px;">@L["Novo Tipo de Renda"]</h3>

@if (isSaving)
{
    <p>@L["Salvando..."]</p>
}

<div class="form-group">
    <label>@L["Nome do Tipo de Renda"]</label>
    <input class="form-control" @bind="tipo.TipoDeEntrada" />

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <p class="text-danger mt-1">@errorMessage</p>
    }
</div>

<div class="d-flex align-items-center mt-2 gap-2">
    <button class="btn btn-primary" @onclick="Salvar">
        @L["Salvar"]
    </button>

    <a class="btn btn-primary" href="/tiposrendas">
        @L["Cancelar"]
    </a>
</div>

@code {
    private TiposDeEntradas tipo = new()
    {
        TipoDeEntrada = string.Empty
    };

    private bool isSaving = false;
    private string errorMessage = string.Empty;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        var token = TokenService.GetToken();
        userId = TokenService.GetUserIdFromToken();

        if (string.IsNullOrWhiteSpace(token))
        {
            Nav.NavigateTo("/login", forceLoad: true);
            return;
        }
    }

    private async Task Salvar()
    {
        try
        {
            isSaving = true;
            errorMessage = string.Empty;

            if (string.IsNullOrWhiteSpace(tipo.TipoDeEntrada))
            {
                errorMessage = L["O nome do tipo de renda é obrigatório."];
                return;
            }

            tipo.UserId = userId;

            var client = HttpFactory.CreateClient("apis");
            var response = await client.PostAsJsonAsync("tiposentrada", tipo);

            if (response.IsSuccessStatusCode)
            {
                Nav.NavigateTo("/tiposrendas");
            }
            else
            {
                errorMessage = L["Erro ao salvar. Código: {0}", response.StatusCode];
            }
        }
        catch (Exception ex)
        {
            errorMessage = L["Erro: {0}", ex.Message];
        }
        finally
        {
            isSaving = false;
        }
    }
}
