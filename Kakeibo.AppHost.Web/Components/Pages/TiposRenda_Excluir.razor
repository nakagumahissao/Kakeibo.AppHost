@page "/tiposrendas/excluir/{id:decimal}"
@using Kakeibo.AppHost.Web.Models
@using Microsoft.Extensions.Localization
@inject IHttpClientFactory HttpFactory
@inject NavigationManager Nav
@inject Kakeibo.AppHost.Web.Services.TokenService TokenService
@inject IStringLocalizer<TiposRenda_Excluir> L
@rendermode InteractiveServer

<PageTitle>@L["Tipos de Rendas - Excluir"]</PageTitle>

<h3 style="padding-bottom:10px;">@L["Excluir Tipo de Renda"]</h3>

@if (tipo == null)
{
    <p>@L["Carregando..."]</p>
}
else
{
    <EditForm EditContext="editContext"
              FormName="ExcluirTipoRendaForm"
              OnValidSubmit="ConfirmarExclusao">

        <div class="mb-3">
            <label>@L["Nome do Tipo de Renda"]</label>
            <InputText class="form-control"
                       @bind-Value="tipo.TipoDeEntrada"
                       Disabled="true" />
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <p class="text-danger mt-1">@errorMessage</p>
        }

        <div class="d-flex align-items-center mt-2 gap-2">
            <button class="btn btn-danger" type="submit">
                @L["Excluir"]
            </button>

            <a class="btn btn-primary" href="/tiposrendas">
                @L["Cancelar"]
            </a>
        </div>
    </EditForm>
}

@code {
    [Parameter] public decimal id { get; set; }

    private TiposDeEntradas? tipo;
    private EditContext? editContext;
    private string? errorMessage;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        var token = TokenService.GetToken();
        userId = TokenService.GetUserIdFromToken();

        if (string.IsNullOrWhiteSpace(token))
        {
            Nav.NavigateTo("/login", forceLoad: true);
            return;
        }

        var client = HttpFactory.CreateClient("apis");
        tipo = await client.GetFromJsonAsync<TiposDeEntradas>($"tiposentrada/{id}");

        if (tipo != null)
        {
            editContext = new EditContext(tipo);
        }
        else
        {
            errorMessage = L["Tipo de Renda não encontrado."];
        }
    }

    private async Task ConfirmarExclusao()
    {
        if (tipo == null) return;

        try
        {
            var client = HttpFactory.CreateClient("apis");
            var response = await client.DeleteAsync($"tiposentrada/{tipo.TipoDeEntradaId}");

            if (response.IsSuccessStatusCode)
            {
                Nav.NavigateTo("/tiposrendas");
            }
            else
            {
                errorMessage = L["Erro ao excluir. Código: {0}", response.StatusCode];
            }
        }
        catch (Exception ex)
        {
            errorMessage = L["Erro: {0}", ex.Message];
        }
    }
}
