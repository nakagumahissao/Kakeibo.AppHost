@page "/tiposrendas"
@using Microsoft.AspNetCore.Authorization
@attribute [StreamRendering(true)]
@attribute [OutputCache(Duration = 5)]
@inject IHttpClientFactory HttpFactory
@inject NavigationManager Nav
@inject Kakeibo.AppHost.Web.Services.TokenService TokenService
@inject IStringLocalizer<SharedResources> L

@using Kakeibo.AppHost.Web.Models

<PageTitle>@L["Tipos de Rendas"]</PageTitle>

<h1>@L["Tipos de Rendas"]</h1>

@if (entradas == null)
{
    <p><em>@L["Carregando..."]</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>@L["ID"]</th>
                <th>@L["Tipo de Renda"]</th>
                <th>@L["Ações"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entrada in entradas)
            {
                <tr>
                    <td>@entrada.TipoDeEntradaId</td>
                    <td>@entrada.TipoDeEntrada</td>
                    <td>
                        <a href="/tiposrendas/editar/@entrada.TipoDeEntradaId"
                           class="btn btn-sm btn-primary">
                            @L["Editar"]
                        </a>

                        <a href="/tiposrendas/excluir/@entrada.TipoDeEntradaId"
                           class="btn btn-sm btn-danger ms-2">
                            @L["Excluir"]
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/tiposrendas/adicionar" class="btn btn-success">
        @L["Adicionar"]
    </a>
}

@code {
    private List<TiposDeEntradas>? entradas;

    protected override async Task OnInitializedAsync()
    {
        var token = TokenService.GetToken();
        var userId = TokenService.GetUserIdFromToken();

        if (string.IsNullOrWhiteSpace(token))
        {
            Nav.NavigateTo("/login/returnUrl==/tiposrendas", forceLoad: true);
            return;
        }

        var client = HttpFactory.CreateClient("apis");
        entradas = await client.GetFromJsonAsync<List<TiposDeEntradas>>(
            $"tiposentrada/{userId}"
        );
    }
}
