@page "/listadespesas/excluir/{id:int}"
@using Kakeibo.AppHost.Web.Models
@using Microsoft.Extensions.Localization

@inject IHttpClientFactory HttpFactory
@inject NavigationManager Nav
@inject Kakeibo.AppHost.Web.Services.TokenService TokenService
@inject IStringLocalizer<ListaDespesas_Excluir> L

@rendermode InteractiveServer

<PageTitle>@L["Lista de Despesas - Excluir"]</PageTitle>

<h3 style="padding-bottom:10px;">@L["Excluir Despesa"]</h3>

@if (despesa == null)
{
    <p>@L["Carregando..."]</p>
}
else
{
    <div class="form-group">
        <label>@L["Tipo de Despesa"]</label>
        <input class="form-control"
               value="@despesa.TipoDespesaNome"
               disabled />
    </div>

    <div class="form-group mt-2">
        <label>@L["Nome da Despesa"]</label>
        <input class="form-control"
               value="@despesa.NomeDespesa"
               disabled />
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <p class="text-danger mt-1">@L[errorMessage]</p>
    }

    <div class="d-flex align-items-center mt-2 gap-2">
        <button class="btn btn-danger" @onclick="ConfirmarExclusao">
            @L["Excluir"]
        </button>
        <a class="btn btn-secondary" href="/listadespesas">
            @L["Cancelar"]
        </a>
    </div>
}

@code {
    [Parameter] public int id { get; set; }

    private Despesa? despesa;
    private string? errorMessage;
    private string? userId;

    protected override async Task OnInitializedAsync()
    {
        userId = TokenService.GetUserIdFromToken();
        var token = TokenService.GetToken();

        if (string.IsNullOrWhiteSpace(token))
        {
            Nav.NavigateTo("/login", forceLoad: true);
            return;
        }

        var client = HttpFactory.CreateClient("apis");
        despesa =
            await client.GetFromJsonAsync<Despesa>(
                $"despesas/{id}"
            );
    }

    private async Task ConfirmarExclusao()
    {
        if (despesa == null)
            return;

        try
        {
            var client = HttpFactory.CreateClient("apis");
            var response =
                await client.DeleteAsync(
                    $"despesas/{despesa.DespesaId}"
                );

            if (response.IsSuccessStatusCode)
            {
                Nav.NavigateTo("/listadespesas");
            }
            else
            {
                errorMessage =
                    $"Erro ao excluir. Código: {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
    }
}
