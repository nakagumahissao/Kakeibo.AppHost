@page "/tiposdespesas"
@using Microsoft.AspNetCore.Authorization
@using Kakeibo.AppHost.Web.Models
@attribute [StreamRendering(true)]
@attribute [OutputCache(Duration = 5)]
@inject IHttpClientFactory HttpFactory
@inject NavigationManager Nav
@inject Kakeibo.AppHost.Web.Services.TokenService TokenService

<PageTitle>Tipos de Despesas</PageTitle>

<h1>Tipos de Despesas</h1>

@if (despesas == null)
{
    <p><em>Carregando...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tipo de Despesa</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var despesa in despesas)
            {
                <tr>
                    <td>@despesa.TipoDespesaId</td>
                    <td>@despesa.TipoDeDespesa</td>
                    <td>
                        <a href="/tiposdespesas/editar/@despesa.TipoDespesaId"
                           class="btn btn-sm btn-primary">
                            Editar
                        </a>

                        <a href="/tiposdespesas/excluir/@despesa.TipoDespesaId"
                           class="btn btn-sm btn-danger ms-2">
                            Excluir
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/tiposdespesas/adicionar" class="btn btn-success">Adicionar</a>
}

@code {
    private List<TiposDeDespesa>? despesas;

    protected override async Task OnInitializedAsync()
    {
        var token = TokenService.GetToken();
        var userId = TokenService.GetUserIdFromToken();

        if (string.IsNullOrWhiteSpace(token))
        {
            Nav.NavigateTo("/login", forceLoad: true);
            return;
        }

        var client = HttpFactory.CreateClient("apis");
        despesas = await client.GetFromJsonAsync<List<TiposDeDespesa>>(
            $"tiposdespesa/{userId}"
        );
    }
}
