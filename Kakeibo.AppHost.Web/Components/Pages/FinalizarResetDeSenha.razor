@page "/resetpassword/{UserId}"
@using System.ComponentModel.DataAnnotations
@using Microsoft.Extensions.Localization

@rendermode InteractiveServer

@inject IHttpClientFactory HttpFactory
@inject NavigationManager Nav
@inject Kakeibo.AppHost.Web.Services.TokenService TokenService
@inject IStringLocalizer<FinalizarResetDeSenha> L

<PageTitle>@L["Resetar Senha - Finalizacao"]</PageTitle>

<h3 style="padding-bottom:10px;">
    @L["Redefinir Senha"]
</h3>

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">@successMessage</div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<EditForm Model="@resetPasswordModel"
          OnValidSubmit="HandleResetPassword"
          FormName="ResetarSenhaFinalForm">

    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="newPassword" class="form-label">
            @L["Nova Senha"]
        </label>
        <InputText id="newPassword"
                   type="password"
                   class="form-control"
                   @bind-Value="resetPasswordModel.NewPassword" />
    </div>

    <div class="mb-3">
        <label for="confirmPassword" class="form-label">
            @L["Confirme a Senha"]
        </label>
        <InputText id="confirmPassword"
                   type="password"
                   class="form-control"
                   @bind-Value="resetPasswordModel.ConfirmPassword" />
    </div>

    <button type="submit"
            class="btn btn-primary"
            disabled="@isSubmitting">
        @(isSubmitting
                ? L["Enviando..."]
                : L["Redefinir Senha"])
    </button>
</EditForm>

@code {
    [Parameter]
    public string UserId { get; set; } = string.Empty;

    [Parameter]
    [SupplyParameterFromQuery]
    public string Token { get; set; } = string.Empty;

    private ResetPasswordModel resetPasswordModel = new();
    private bool isSubmitting = false;
    private string? successMessage;
    private string? errorMessage;

    private async Task HandleResetPassword()
    {
        isSubmitting = true;
        errorMessage = null;
        successMessage = null;

        if (resetPasswordModel.NewPassword != resetPasswordModel.ConfirmPassword)
        {
            errorMessage = L["As senhas não conferem."];
            isSubmitting = false;
            return;
        }

        try
        {
            var client = HttpFactory.CreateClient("apis");

            var response = await client.PostAsJsonAsync(
                "auth/confirm-reset-password",
                new
                {
                    UserId,
                    NewPassword = resetPasswordModel.NewPassword,
                    Token
                });

            if (response.IsSuccessStatusCode)
            {
                successMessage =
                    L["Senha redefinida com sucesso! Você será redirecionado para o login."];

                TokenService.Logout();

                await Task.Delay(2000);
                Nav.NavigateTo("/login", forceLoad: true);
            }
            else
            {
                var errorObj =
                    await response.Content.ReadFromJsonAsync<ErrorResponse>();

                errorMessage =
                    errorObj?.error
                    ?? L["Erro ao redefinir senha:"] + $" {response.StatusCode}";
            }
        }
        catch (Exception ex)
        {
            errorMessage =
                L["Erro inesperado:"] + $" {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    public class ResetPasswordModel
    {
        [Required(ErrorMessage = "A nova senha é obrigatória.")]
        public string NewPassword { get; set; } = string.Empty;

        [Required(ErrorMessage = "A confirmação de senha é obrigatória.")]
        public string ConfirmPassword { get; set; } = string.Empty;

        public string Token { get; set; } = string.Empty;
    }

    public class ErrorResponse
    {
        public string? error { get; set; }
    }
}
