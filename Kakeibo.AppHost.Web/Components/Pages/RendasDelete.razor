@page "/rendas/delete/{EntradaId:int}"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Kakeibo.AppHost.Web.Models
@rendermode InteractiveServer

@inject IHttpClientFactory HttpFactory
@inject NavigationManager Nav
@inject Kakeibo.AppHost.Web.Services.TokenService TokenService
@inject IStringLocalizer<RendasDelete> L

<PageTitle>@L["Excluir Renda"]</PageTitle>

<h3 style="padding-bottom:10px;">
    @L["Excluir Renda"]
</h3>

@if (entrada == null && !deleted)
{
    <p>@L["Carregando dados..."]</p>
}
else if (deleted)
{
    <div class="alert alert-success mt-3">
        @L["Renda excluída com sucesso"] ✔
    </div>

    <a class="btn btn-primary mt-3" href="/rendas">
        ⬅ @L["Voltar"]
    </a>
}
else
{
    <div class="card p-3 mb-3">
        <p>
            <strong>@L["ID"]:</strong> @entrada!.EntradaID
        </p>
        <p>
            <strong>@L["Descrição"]:</strong> @entrada.Descricao
        </p>
        <p>
            <strong>@L["Valor"]:</strong> @entrada.ValorEntrada.ToString("N2")
        </p>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-danger btn-sm" @onclick="ConfirmDelete">
            🗑 @L["Excluir"]
        </button>

        <a class="btn btn-secondary btn-sm" href="/rendas">
            ⬅ @L["Cancelar"]
        </a>
    </div>
}

@code {
    [Parameter] public int EntradaId { get; set; }

    private Entradas? entrada;
    private bool deleted = false;

    protected override async Task OnInitializedAsync()
    {
        var token = TokenService.GetToken();
        if (string.IsNullOrWhiteSpace(token))
        {
            Nav.NavigateTo("/login", forceLoad: true);
            return;
        }

        var client = HttpFactory.CreateClient("apis");
        entrada = await client.GetFromJsonAsync<Entradas>($"entradas/{EntradaId}");
    }

    private async Task ConfirmDelete()
    {
        var client = HttpFactory.CreateClient("apis");
        var result = await client.DeleteAsync($"entradas/{EntradaId}");

        if (result.IsSuccessStatusCode)
        {
            deleted = true;
            entrada = null;
            StateHasChanged();
        }
    }
}
