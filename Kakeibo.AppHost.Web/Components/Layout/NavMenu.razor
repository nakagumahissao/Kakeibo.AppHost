@using Microsoft.AspNetCore.Components.Authorization
@inject IJSRuntime JS
@inject AuthenticationStateProvider AuthProvider
@inject NavigationManager Nav
@rendermode InteractiveServer
@inject IStringLocalizer<SharedResources> L


@inject Kakeibo.AppHost.Web.Services.TokenService TokenService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Kakeibo</a>
    </div>
</div>

<input type="checkbox" title="@L["Navigation menu"]" class="navbar-toggler" />

<div class="nav-scrollable">
    <nav class="nav flex-column" style="width: 250px;">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> @L["Home"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="calendar">
                <span class="bi bi-plus-square-fill" aria-hidden="true"></span> @L["Calendário"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tiposdespesas">
                <span class="bi bi-plus-square-fill" aria-hidden="true"></span> @L["Tipos de Despesas"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tiposrendas">
                <span class="bi bi-plus-square-fill" aria-hidden="true"></span> @L["Tipos de Rendas"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="listadespesas">
                <span class="bi bi-plus-square-fill" aria-hidden="true"></span> @L["Lista de Despesas"]
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <a class="nav-link" href="#" onclick="toggleSubmenu(event)">
                <span class="bi bi-list-nested" aria-hidden="true"></span> @L["Registros"]
            </a>
            <div class="submenu" style="display: none; flex-direction: column; padding-left: 15px;">
                <NavLink class="nav-link" href="rendas">@L["Rendas"]</NavLink>

                @if (tokenUserId is not null && tokenUserId != "")
                {
                    <NavLink class="nav-link" href="@($"/saidaspage/{tokenUserId}/{DateTime.Today.Day}/{DateTime.Today.Month}/{DateTime.Today.Year}")">
                        @L["Saídas"]
                    </NavLink>
                }
                else
                {
                    <NavLink class="nav-link" href="@($"/saidaspage/notlogged/{DateTime.Today.Day}/{DateTime.Today.Month}/{DateTime.Today.Year}")">
                        @L["Saídas"]
                    </NavLink>
                }
            </div>
        </div>

        @if (tokenUserId is not null && tokenUserId != "")
        {
            <div class="nav-item px-3">
                <a class="nav-link" href="#" onclick="toggleSubmenu(event)">
                    <span class="bi bi-list-nested"></span> @L["Profile"]
                </a>

                <div class="submenu" style="display: none; flex-direction: column; padding-left: 15px;">
                    <NavLink class="nav-link" href="/alterar-senha">@L["Alterar Senha"]</NavLink>
                    <NavLink class="nav-link" href="/resetar-senha">@L["Resetar Senha"]</NavLink>

                    <button class="nav-link btn btn-link text-start" @onclick="Logout">@L["Sair"]</button>
                </div>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <a class="nav-link" href="#" onclick="toggleSubmenu(event)">
                    <span class="bi bi-list-nested" aria-hidden="true"></span>
                    @L["Usuários"]
                </a>

                <div class="submenu" style="display: none; flex-direction: column; padding-left: 15px;">
                    <NavLink class="nav-link" href="/login">@L["Entrar"]</NavLink>
                    <NavLink class="nav-link" href="/register-user">@L["Registrar"]</NavLink>
                </div>
            </div>
        }
    </nav>
</div>

<script>
    function toggleSubmenu(event) {
        event.preventDefault();
        const submenu = event.currentTarget.nextElementSibling;
        if (submenu.style.display === "none") {
            submenu.style.display = "flex";
        } else {
            submenu.style.display = "none";
        }
    }
</script>

@code {
    private bool showUserMenu = false;
    private string? token;
    private string? tokenUserId;

    protected override async Task OnInitializedAsync()
    {
        token = TokenService.GetToken();
        tokenUserId = TokenService.GetUserIdFromToken();
    }

    void ToggleUserMenu()
    {
        showUserMenu = !showUserMenu;
    }

    async Task Logout()
    {
        // Clear token
        await JS.InvokeVoidAsync("localStorage.removeItem", "authToken");

        // Reset auth state
        if (AuthProvider is IHostEnvironmentAuthenticationStateProvider envAuth)
        {
            envAuth.SetAuthenticationState(Task.FromResult(
                new AuthenticationState(new System.Security.Claims.ClaimsPrincipal())));
        }

        Nav.NavigateTo("/login", forceLoad: true);
    }
}